BoxLayout:
    id: mainBox
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.3
                Button:
                    id: requiredList
                    text: 'List Required'
                    on_release: app.required_list()
                Button:
                    id: completedList
                    text: 'List Completed'
                    on_release: app.completed_list()
                Label:
                    text: 'Add New Item'
                    size_hint_y: None
                    height: '48dp'
                Label:
                    text: 'Name'
                    size_hint_y: None
                    height: '48dp'
                TextInput:
                    id: itemName
                    value: ''
                    size_hint_y: None
                    height: '48dp'
                    multiline: False
                    write_tab: False
                Label:
                    text: 'Price'
                    size_hint_y: None
                    height: '48dp'
                TextInput:
                    id: itemPrice
                    value: ''
                    size_hint_y: None
                    height: '48dp'
                    multiline: False
                    write_tab: False
                Label:
                    text: 'Priority'
                    size_hint_y: None
                    height: '48dp'
                TextInput:
                    id: itemPriority
                    value: ''
                    size_hint_y: None
                    height: '48dp'
                    multiline: False
                    write_tab: False
                Button:
                    id: addItem
                    text: 'Add item'
                    on_release: app.add_item(itemName.text, itemPrice.text, itemPriority.text)
                Button:
                    id: clear
                    text: 'Clear'
                    on_release: app.clear_entry_fields()

            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: heading
                    size_hint_y: 0.1
                BoxLayout:
                    id: itemsButtons
                    cols: 1
                    orientation: 'vertical'

        Label:
            id: display
            size_hint_y: 0.1